<style>

  body {
    height: auto;
    margin: 0;
  }

  .payment-container {
    text-align: center;
    background-color: white;
    width: auto;
    height: 90vh;
  }

  .payment-container h1 {
    margin: 0;
  }



 

/*---- contact bar section ----*/

  .contact-bar {
    background-color: #0f2a51;
    width: auto;
    height: auto;
    text-align: center;
    color: rgb(181, 181, 181);
  }


  .contact-bar a {
    text-decoration: none;
    color: white;
  }

  .contact-bar .svg-inline--fa {
    color: white;
    font-size: 1.5em;
    padding-left: .5em;
  }

  .contact-bar .box {
    display: inline-block;
    vertical-align: middle;
    padding-left: .3em;
    padding-top: .2em;
    padding-bottom: .2em;
  }
  
  .contact-bar h2 {
    color: white;
    font-size: 12px;
  }

  


/*---- sitemap section ----*/

  .sitemap {
    background-color: gray;
    width: auto;
    height: auto;
    text-align: center;
    color: rgb(181, 181, 181);
  }


  .sitemap h3 {
    padding-top: 20px;
    padding-bottom: 20px;
    color: white;
    display: inline-block;
    font-size: 10px;
  }

  .sitemap a {
    text-decoration: none;
    color: white;
  }

  .sitemap .box {
    display: inline-block;
    vertical-align: middle;
  }





  .price-heading {
    width: auto;
    height: 100px;
    padding: 20px;
  }


  .price-box {
    background-color: white;
    color: #0f2a51;
    border: 1px solid #0f2a514d;
    width: 30%;
    max-width: 350px;
    min-width: 300px;
    height: 32em;
    vertical-align: top;
    display: inline-block;
    margin-left: .5em;
    margin-right: .5em;
    margin-top: 1em;
    transition: all .4s linear 0s;
  }

  .price-body-top {
    width: auto;
    height: 210px;
    padding-left: 55px;
    padding-right: 20px;
    text-align: left;
  }

  .price-body-top p {
    margin-top: -9px;
  }

/*-- seal section --*/

.seal-section {
  text-align: center;
  width: auto;
  height: auto;
  padding: 15px;
  background-color: gray;
}

.visa-card {
  width: 40px;
  max-width: 50px;
  height: auto;
}

.google-card {
