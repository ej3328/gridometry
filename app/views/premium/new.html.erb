}

#comodo-seal-box  {
  width: 50px;
  max-width: 60px;
  height: auto;
  border: solid red;
}

.comodo-seal {
  width: auto;
  height: auto;
}

#fb.svg-inline--fa.fa-w-14 {
  color: #00327a;
  position: absolute;
  right: 1.7em;
  padding-right: 0px;
  font-size: 22px;
}

#ig.svg-inline--fa.fa-w-14 {
  color: #00327a;
  position: absolute;
  right: .3em;
  font-size: 22px;
}

.box #fb.svg-inline--fa.fa-w-14 {
  color: white;
  position: relative;
  right: .5em;
  font-size: 20px;
  padding-right: 0px;
  padding-left: 0px;
}

